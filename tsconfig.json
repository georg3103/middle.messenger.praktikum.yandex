{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "paths": {
      "*": [ "src/types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".cache",
    ".github"
  ]
}